import argparse
import sys

from sortinghat.cmd.load import Load
from sortinghat.cmd.organizations import Organizations


def main():
    args = parse_args()

    if args.command == 'load':
        cmd_klass = Load
    elif args.command == 'orgs':
        cmd_klass = Organizations
    else:
        raise RuntimeError("Unknown command %s" % args.command)

    cmd = cmd_klass(user=args.db_user, password=args.db_password,
                    database=args.db_name, host=args.db_hostname,
                    port=args.db_port)
    cmd.run(*args.cmd_args)


def parse_args():
    parser = argparse.ArgumentParser(usage="Usage: '%(prog)s [options] command")

    # Database options
    db_group = parser.add_argument_group('Database options')
    db_group.add_argument('-u', '--user', dest='db_user',
                          help="Database user name",
                          default='root')
    db_group.add_argument('-p', '--password', dest='db_password',
                          help="Database user password",
                          default='')
    db_group.add_argument('-d', '--database', dest='db_name',
                          help="Name of the database where fetched projects will be stored")
    db_group.add_argument('--host', dest='db_hostname',
                          help="Name of the host where the database server is running",
                          default='localhost')
    db_group.add_argument('--port', dest='db_port',
                          help="Port of the host where the database server is running",
                          default='3306')

    # Command arguments
    parser.add_argument('command',
                        help="Command to run")
    parser.add_argument('cmd_args', nargs=argparse.REMAINDER)

    # Parse arguments
    return parser.parse_args()


if __name__ == '__main__':
    try:
        main()
    except KeyboardInterrupt:
        print "\n\nReceived Ctrl-C or other break signal. Exiting."
        sys.exit(0)
